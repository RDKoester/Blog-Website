<%- include("partials/header") -%>

<h1>Compose</h1>

<form action="/" method="post">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input class="form-control" id="postTitle" type="text" name="postTitle" placeholder="" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="newPost">Post</label>
        <textarea class="form-control" rows="5" id="newPost" type="text" name="newPost" placeholder=""></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="button" value="compose">Publish</button>
</form>

<%- include("partials/footer") -%>